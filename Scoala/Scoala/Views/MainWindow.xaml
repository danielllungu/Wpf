        <TextBlock HorizontalAlignment="Left" Margin="79,147,0,0" Foreground="AliceBlue" FontWeight="Bold" FontSize="18" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" Height="28"><Run Text="Email : "/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Foreground="AliceBlue" FontSize="18" FontWeight="Bold" Margin="99,204,0,0" TextWrapping="Wrap" Text="Password :" VerticalAlignment="Top" Width="110" Height="27"/>
        <PasswordBox x:Name="password_login" HorizontalAlignment="Left" FontSize="16" Margin="209,204,0,0" VerticalAlignment="Top" Width="252" Height="27"/>
        <Button x:Name="login_btn" Content="Ok" FontSize="17" FontWeight="SemiBold" Foreground="Black" Background="AntiqueWhite" HorizontalAlignment="Left" Margin="245,288,0,0" VerticalAlignment="Top" Width="116" Height="27" Click="Button_Click_1"/>

    </Grid>
</Window>
