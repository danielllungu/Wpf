<Window x:Class="Scoala.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scoala"
        mc:Ignorable="d"
        Title="My School" Height="500" Width="600" Background="Black">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Text="LOGIN:" Foreground="LightGreen" FontSize="40" FontStyle="Normal" FontWeight="Heavy" TextAlignment="Center" Margin="209,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="64" Width="180"/>
